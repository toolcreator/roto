{
  "name": "roto",
  "productName": "roto",
  "version": "0.1.0",
  "description": "Tool for creating personalized festival running orders",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron-forge start",
    "prebuild": "npm run clean; cd src/build-config && c-preprocessor build-config.ts.in build-config.ts",
    "build": "tsc",
    "prebuild-debug": "cd src/build-config && c-preprocessor --config debug-config.json build-config.ts.in build-config.ts",
    "build-debug": "tsc",
    "lint": "eslint src/**/*.ts",
    "pretest": "npm run build",
    "test": "nyc mocha",
    "clean": "rimraf dist",
    "make-all-platforms": "docker build --tag roto-build docker && docker run --mount type=bind,src=$(npm prefix),dst=/roto roto-build",
    "preversion": "npm test && npm run lint",
    "postversion": "git push && git push --tags && npm run make-all-platforms"
  },
  "keywords": [],
  "author": {
    "name": "toolcreator",
    "email": "de.toolcreator@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toolcreator/roto"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "make_targets": {
        "linux": [
          "zip"
        ],
        "win32": [
          "zip"
        ],
        "darwin": [
          "zip"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ]
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ]
    },
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "es2020": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts",
            ".tsx",
            ".js",
            ".jsx"
          ]
        }
      }
    }
  },
  "mocha": {
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "spec": [
      "src/**/*.spec.ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "branches": 30,
    "lines": 30,
    "statements": 30,
    "functions": 50,
    "watermarks": {
      "lines": [
        30,
        50
      ],
      "branches": [
        30,
        50
      ],
      "statements": [
        30,
        50
      ],
      "functions": [
        50,
        80
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.12",
    "@types/jsdom": "^16.2.3",
    "@types/jsdom-global": "^3.0.2",
    "@types/mocha": "^8.0.2",
    "@types/node": "^12.12.54",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "c-preprocessor": "^0.2.13",
    "chai": "^4.2.0",
    "electron": "^9.3.1",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "electron-squirrel-startup": "^1.0.0",
    "material-design-icons-iconfont": "^6.1.0"
  }
}
